<div class="row">
	<h1 class="col-md-6">All Game Accounts!</h1>
	<%= link_to 'Create a New Game Account', new_admin_game_account_path, class: 'btn btn-success' %> 
</div>

<div class="col-md-9">
	<table class="table table-hover mt-5">
		<thead>
			<tr>
				<th>Title</th>
				<th>Username</th>
				<th>Status</th>
				<th>Created at</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @game_accounts.each do |game_account| %>
			<tr>
				<td><%= game_account.title %></td>
				<td><%= game_account.username %></td>
				<td><%= game_account.status %></td>
				<td><%= game_account.created_at %></td>
				<td> 
					<%= link_to 'Edit', edit_admin_game_account_url(game_account), class: "btn btn-warning" %>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>






