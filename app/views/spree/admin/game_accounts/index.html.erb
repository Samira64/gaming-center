<% admin_breadcrumb("All Game Accounts") %>

<% content_for :page_actions do %>
  <li>
    <%= link_to t('spree.new_game_account'), new_admin_game_account_url, id: 'admin_new_game_account', class: 'btn btn-primary' %>
  </li>
<% end %>

<div class="col-md-12">
	<table class="table table-hover mt-5">
		<thead>
			<tr>
				<th>Title</th>
				<th>Username</th>
				<th>Status</th>
				<th>Created at</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @game_accounts.each do |game_account| %>
			<tr>
				<td><%= game_account.title %></td>
				<td><%= game_account.username %></td>
				<td><%= game_account.status %></td>
				<td><%= game_account.created_at.to_formatted_s(:long_ordinal) %></td>
				<td> 
					<%= link_to 'Edit', edit_admin_game_account_url(game_account), class: "btn btn-warning" %>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>






